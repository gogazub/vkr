# Environment mode: DEV or PROD
ENV_MODE=DEV

# Application
APP_NAME=validation-microservice
APP_VERSION=0.1.0
DEBUG=True

# Server
HOST=0.0.0.0
PORT=8000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/validation_db

# Data paths (for DEV mode)
DATA_PATH=./data
MODELS_PATH=./models

# Docker host paths (optional, for docker-compose volume mapping)
HOST_DATA_PATH=./data
HOST_MODELS_PATH=./models

# Images directory (relative to DATA_PATH)
IMAGES_DIR=images
# Labels directory (relative to DATA_PATH)
LABELS_DIR=labels

# ONNX Model
MODEL_FILE=model.onnx

# Model inference defaults
MODEL_IMG_SIZE=640
MODEL_CONF_THRESHOLD=0.25
MODEL_MAX_DET=100

# Security
SECRET_KEY=your-secret-key-change-in-production

# Logging
LOG_LEVEL=INFO
